{
    "openapi": "3.0.2",
    "info": {
        "title": "Queues"
    },
    "servers": [
        {
            "url": "http:\/\/localhost\/api\/v1",
            "description": "App Environment"
        },
        {
            "url": "http:\/\/localhost\/api\/v1",
            "description": "Default"
        }
